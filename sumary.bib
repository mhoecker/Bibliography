@Article{jiang2012,
  author   = {ChuanLi Jiang and Sarah T. Gille and Janet Sprintall and Kei Yoshimura and Masao Kanamitsu},
  title    = {Spatial Variation in Turbulent Heat Fluxes in Drake Passage},
  journal  = {Journal of Climate},
