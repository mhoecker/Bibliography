@Article{Bates1998b,
  author   = {Bates, Timothy S. and Kapustin, Vladimir N. and Quinn, Patricia K. and Covert, David S. and Coffman, Derek J. and Mari, Celine and Durkee, Philip A. and De Bruyn, Warren J. and Saltzman, Eric S.},
  title    = {Processes controlling the distribution of aerosol particles in the lower marine boundary layer during the First Aerosol Characterization Experiment (ACE 1)},
