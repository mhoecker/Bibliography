@Article{li2005,
  author   = {Li, Ming and Garrett, Chris and Skyllingstad, Eric},
  title    = {A regime diagram for classifying turbulent large eddies in the upper ocean},
  journal  = {Deep Sea Research Part I: Oceanographic Research Papers},
  year     = {2005},
