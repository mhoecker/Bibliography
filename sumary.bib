@Article{Ma2005,
  Title                    = {Passive Acoustic Detection and Measurement of Rainfall at Sea},
  Author                   = {Ma, Barry B. and Nystuen, Jeffrey A.},
  Journal                  = {J. Atmos. Oceanic Technol.},
  Year                     = {2005},

  Month                    = aug,
  Number                   = {8},
  Pages                    = {1225--1248},
